<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>

    <!-- targetRuntime 用Mybtis3,默认的 -->
    <context id="DB2Tables" targetRuntime="MyBatis3">

        <!-- 去除注解 -->
        <commentGenerator>
            <property name="suppressAllComments" value="true" />
        </commentGenerator>

        <!-- 基本的数据库连接 -->
        <jdbcConnection
                driverClass="com.mysql.jdbc.Driver"
                connectionURL="jdbc:mysql://localhost:3306/shirodemo?characterEncoding=utf8&amp;useSSL=false"
                userId="root"
                password="whl1314">
        </jdbcConnection>

        <!-- java类型解析器，目前也就只有forceBigDecimals可以用 -->
        <javaTypeResolver>
            <property name="forceBigDecimals" value="false" />
        </javaTypeResolver>

        <!-- Domain生成器 -->
        <javaModelGenerator targetPackage="cn.ybzy.shirodemo.model"
                            targetProject=".\src\main\java">

        </javaModelGenerator>

        <!--mapper生成器  -->
        <sqlMapGenerator targetPackage="cn.ybzy.shirodemo.dao"
                         targetProject=".\src\main\java">
            <property name="enableSubPackages" value="true" />
        </sqlMapGenerator>

        <!--Mapper生成器，当type为ANNOTATEDMAPPER时是带有@annotation的mapper，XMLMAPPER是XML文件类型 -->
        <javaClientGenerator type="XMLMAPPER"
                             targetPackage="cn.ybzy.shirodemo.dao" targetProject=".\src\main\java">
            <property name="enableSubPackages" value="true" />
        </javaClientGenerator>

        <!-- 字段命名策略过程：<columnRenamingRule> >> property name="userActualColumnNames" -->
        <!-- alias属性是个神器，会为所有SQL都添加，做关联的时候非常方便 -->
        <!-- 至于Example,全关闭   tableName对应数据库的表名，-domainObjectName对应model表名-->
        <table
                tableName="t_user" domainObjectName="User"
                enableCountByExample="false" enableUpdateByExample="false"
                enableDeleteByExample="false" enableSelectByExample="false"
                selectByExampleQueryId="false" >
        </table>


    </context>
</generatorConfiguration>